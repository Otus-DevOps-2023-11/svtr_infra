      "folder_id": "{{user `yc_folder_id`}}",
      "source_image_family": "ubuntu-1604-lts",
      "image_name": "reddit-app-ansible-{{timestamp}}",
      "image_family": "reddit-app-ansible",
      "ssh_username": "ubuntu",
